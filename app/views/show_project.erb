<hello-world></hello-world>
<div class="debug">
    <header class="container debug">
        <form action="/" method="get" id="home" class="fl-l debug">
            <input type="submit" value="Home" class="debug"/>
        </form>
        <form action="/logout" method="post" id="logout" class="fl-r debug">
            <input type="submit" value="Log Out" class="debug"/>
        </form>

    </header>

    <div class="p-xxl bgc-cool debug">
        some sort of header bar
    </div>

    <main role="main" id="main" class="container p-sm row gutters-t gutters-d debug">
        <div id="Icebox" class="stage col span-3-t debug">
            <ul class="lis-n debug">
                <h3>Icebox</h3>
                <%= erb :"partials/_list_tasks", locals: { tasks: @task_set.select {|task| task["stage"] == "Icebox"} } %>
            </ul>
        </div>

        <div id="Development" class="stage col span-3-t debug">
            <ul class="lis-n debug">
                <h3>Development</h3>
                <%= erb :"partials/_list_tasks", locals: { tasks: @task_set.select {|task| task["stage"] == "Development" } } %>
            </ul>
        </div>

        <div id="Testing" class="stage col span-3-t debug">
            <ul class="lis-n debug">
                <h3>Testing</h3>
                <%= erb :"partials/_list_tasks", locals: { tasks: @task_set.select {|task| task["stage"] == "Testing" } } %>
            </ul>
        </div>

        <div id="Deployed" class="stage col span-3-t debug">
            <ul class="lis-n debug">
                <h3>Deployed</h3>
                <%= erb :"partials/_list_tasks", locals: { tasks: @task_set.select {|task| task["stage"] == "Deployed" } } %>
            </ul>
        </div>
        <%= erb :"/partials/_add_task", locals: {project_id: params[:id] } %>

        <div id="taskform" class="debug" style="display: none">
            <form action='/projects/<%= params[:id] %>/tasks' method='post' id="taskroute">
                <select name="stage">
                  <option value="Icebox">Icebox</option>
                  <option value="Development">Development</option>
                  <option value="Testing">Testing</option>
                  <option value="Deployed">Deployed</option>
                </select>
                <input type='text' name='title' placeholder='Title'/>
                <textarea name='description' placeholder='Description'></textarea>
                <input type='submit' value='Submit'/>
            </form>
        </div>
    </main>


</div>

